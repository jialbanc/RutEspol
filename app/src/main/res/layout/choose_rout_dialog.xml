<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:paddingTop="8dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_column="0"
            android:layout_margin="4dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@drawable/ticket_nortea"
            android:id="@+id/ruta_norte_a"
            android:textSize="25sp"
            />

        <Button
            android:layout_column="1"
            android:layout_margin="4dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@drawable/ticket_norteb"
            android:id="@+id/ruta_norte_b"
            android:textSize="25sp"
            />
    </TableRow>

    <TableRow
        android:paddingTop="8dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_column="0"
            android:layout_margin="4dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@drawable/ticket_sureste"
            android:id="@+id/ruta_sur_este"
            android:textSize="25sp"

            />

        <Button
            android:layout_column="1"
            android:layout_margin="4dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@drawable/ticket_suroeste"
            android:id="@+id/ruta_sur_oeste"
            android:textSize="25sp"
            />
    </TableRow>

    <TableRow
        android:paddingTop="8dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_column="0"
            android:layout_margin="4dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@drawable/ticket_centro"
            android:id="@+id/ruta_centro"
            android:textSize="25sp"

            />

        <Button
            android:layout_column="1"
            android:layout_margin="4dp"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:background="@drawable/ticket_duran"
            android:id="@+id/ruta_duran"
            android:textSize="25sp"
            />
    </TableRow>


</TableLayout>