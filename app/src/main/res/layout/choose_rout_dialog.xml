<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norte A"
            android:id="@+id/ruta_norte_a"
            android:textSize="25sp"

            />

        <Button
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norte B"
            android:id="@+id/ruta_norte_b"
            android:textSize="25sp"
            />
    </TableRow>

    <TableRow
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sur Este"
            android:id="@+id/ruta_sur_este"
            android:textSize="25sp"

            />

        <Button
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sur Oeste"
            android:id="@+id/ruta_sur_oeste"
            android:textSize="25sp"
            />
    </TableRow>

    <TableRow
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centro"
            android:id="@+id/ruta_centro"
            android:textSize="25sp"

            />

        <Button
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duran"
            android:id="@+id/ruta_duran"
            android:textSize="25sp"
            />
    </TableRow>


</TableLayout>